{
  "version": 2,
  "builds": [
    {
      "src": "frontend/plant-disease-detector/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/plant-disease-detector/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task"
  },
  "outputDirectory": "frontend/plant-disease-detector/.next"
}
